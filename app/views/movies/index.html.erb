<h3>Welcome to the movie database(camp)</h3>
<% if logged_in? %>
<%= link_to 'Add a movie', new_movie_path %>
<% end %>
<div class="container">
<table>
  <tr>
    <th>Title</th>
  </tr>

  <% @movies.each do |movie| %>
    <tr>
      <td><%= image_tag movie.boxart_url,  :size => "240x320" %> </td>
      <td>&nbsp</td>
      <td>&nbsp <%= link_to movie.title, movie_path(movie) %></td>
    </tr>
  <% end %>
</table>
</div>

<div id="act-feed">
<h3> Activity Feed </h3>

<table>
 <tr>
    <th>Last 3 movies added to IMDbc</th>
  </tr>

  <% @moviesRecent.each do |movie| %>
    <tr>
      <td><%= link_to movie.title, movie_path(movie) %></td>
    </tr>
  <% end %>
</table>

<table>
 <tr>
    <th>Movies most recently commented on</th>
  </tr>

  <% @recentMoviesCommented.each do |movie| %>
    <tr>
      <td><%= link_to movie.title, movie_path(movie) %></td>
    </tr>
  <% end %>
</table>
</div>
