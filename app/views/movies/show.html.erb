<h1><%= @movie.title %></h1>

<div>
  <%= image_tag(@movie.boxart_url, alt: @movie.title + " boxart", size: "240x320") %>
  <p>Released: <%= @movie.year %></p>
  <p>Lead Actor: <%= @movie.lead_actor %></p>
  <p>Movie entry created by: <%= @movie.creator.username %></p>
</div>

<% if flash[:notice] %>
  <% flash[:notice].each do |error| %>
    <div>
      <%= error %>
    </div>
  <% end %>
<% end %>

<h2>Comments</h2>
